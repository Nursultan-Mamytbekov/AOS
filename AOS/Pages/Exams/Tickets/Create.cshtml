@page
@model AOS.Pages.Exams.Tickets.CreateModel

@{
    ViewData["Title"] = "Create";
}


<div class="container">
    <h1>@Model.Exam?.Name</h1>

    <h4>Новый билет</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="UploadTicket.ExamId" value="@Model.Exam?.Id" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="UploadTicket.Name" class="control-label"></label>
                    <input asp-for="UploadTicket.Name" class="form-control" required />
                    <span asp-validation-for="UploadTicket.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UploadTicket.File" class="control-label"></label>
                    <input asp-for="UploadTicket.File" class="form-control-file" type="file" required />
                    <span asp-validation-for="UploadTicket.File" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Создать" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Details" asp-route-examId="@Model.Exam?.Id">Назад</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
