@page
@model AOS.Pages.Exams.Tickets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Изменить билет</h1>

    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Ticket.Id" />
                <div class="form-group">
                    <label asp-for="Ticket.Name" class="control-label"></label>
                    <input asp-for="Ticket.Name" class="form-control" />
                    <span asp-validation-for="Ticket.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Ticket.ExamId" value="@Model.Ticket.ExamId" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Изменить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Details" asp-route-id="@Model.Ticket.Id">Назад</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
