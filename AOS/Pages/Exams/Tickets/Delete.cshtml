@page
@model AOS.Pages.Exams.Tickets.DeleteModel

@{
    ViewData["Title"] = "Delete";
}


<div class="container">
    <h3>Вы действительно хотите удалить данный билет?</h3>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket.Exam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.Exam.Id)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Ticket.Id" />
        <a asp-page="./Index" class="btn btn-secondary mr-3">Назад</a>
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
</div>
