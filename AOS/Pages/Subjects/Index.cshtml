@page
@model AOS.Pages.Subjects.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-hover sortable col-8">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject[0].Name)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Subject) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>               
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Редактировать</a> 
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script src="~/js/sort.js"></script>
}
