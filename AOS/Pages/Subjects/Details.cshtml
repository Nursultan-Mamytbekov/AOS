@page
@model AOS.Pages.Subjects.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1>Предмет</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Subject.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Subject.Name)
            </dd>
        </dl>
        <table class="table table-sm">
            @foreach(var item in Model.Subject.Materials)
            {
                <tr>
                    <th>@Html.DisplayNameFor(m => item.FileName)</th>
                    <td>@Html.DisplayFor(m => item.FileName)</td>
                </tr>
            }
        </table>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Subject.Id" class="btn btn-primary">Изменить</a> |
        <a asp-page="./Index" class="btn btn-secondary">Назад</a>
    </div>
</div>
