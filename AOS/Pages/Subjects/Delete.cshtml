@page
@model AOS.Pages.Subjects.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h3>Вы уверены, что хотите удалить данный предмет?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Subject.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Subject.Name)
            </dd>
        </dl>

