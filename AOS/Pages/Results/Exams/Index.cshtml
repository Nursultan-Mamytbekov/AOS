@page
@model AOS.Pages.Results.Exams.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Результаты экзаменов</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ExamResultGrade[0].Rate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExamResultGrade[0].ExamResult)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExamResultGrade[0].Teacher)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.ExamResultGrade) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Rate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExamResult.FileName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teacher.FullName)
                </td>
                <td align="left">
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-success w-75">Перейти</a> 
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
