@page
@model AOS.Pages.Results.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h4>@Model.Homework.FileName</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">                
                    <input asp-for="Result.HomeworkId" type="hidden" value="@Model.Homework.Id" class="form-control" readonly/>
                </div>
                <div class="form-group">
                    <label asp-for="Result.Rate" class="control-label"></label>
                    <input asp-for="Result.Rate" class="form-control" />
                    <span asp-validation-for="Result.Rate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Result.Review" class="control-label"></label>
                    <textarea asp-for="Result.Review" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Result.Review" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Оценить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="/Events/Homeworks/Details" asp-route-id="@Model.Homework.Id">Назад</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
