@page
@model AOS.Pages.Results.IndexModel

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Результаты</h1>
        <a asp-page="./Exams/Index" class="btn btn-success">Результаты экзаменов</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].Homework)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].Homework.User)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].Rate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Results)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Homework.FileName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Homework.User.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rate)
                    </td>
                    <td align="center">
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-success w-75">Перейти</a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
