@page
@model AOS.Pages.Events.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>События</h1>
    <a asp-page="./Create" class="btn btn-info btn-lg">Загрузить файл</a>
</div>
<table class="table table-hover table-bordered sortable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Material[0].FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material[0].SubjectId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material[0].IsActive)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Material) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Изменить</a>
            </td>
            <td>
                <form method="post">
                    <input type="hidden" asp-for="Id" value="@item.Id" />
                    <button type="submit" class="btn btn-success">Скачать</button>
                </form> 
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script src="~/js/sort.js"></script>
} 
