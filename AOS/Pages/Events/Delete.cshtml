@page
@model AOS.Pages.Events.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h3>Вы уверены, что хотите удалить данный файл?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Material.FileName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Material.FileName)
            </dd>        
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Material.IsActive)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Material.IsActive)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Material.Subject)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Material.Subject.Id)
            </dd>
        </dl>
    
        <form method="post">
            <input type="hidden" asp-for="Material.Id" />
            <a asp-page="./Index" class="btn btn-secondary mr-2">Назад</a>
            <input type="submit" value="Удалить" class="btn btn-danger mr-2" /> 
        </form>
    </div>
</div>
