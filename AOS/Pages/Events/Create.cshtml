@page
@model AOS.Pages.Events.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1>Загрузка нового файла</h1>

    <hr />
    <div class="row">
        <div class="col-md-5">
            <form enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Material.File" class="control-label"></label>
                    <input asp-for="Material.File" class="form-control-file" type="file" />
                    <span asp-validation-for="Material.File" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-check-label">
                        @Html.DisplayNameFor(model => model.Material.IsActive)
                        @Html.DisplayFor(model => model.Material.IsActive)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Material.SubjectId" class="control-label"></label>
                    <select asp-for="Material.SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Material.DeadLine" class="control-label"></label>
                    <input asp-for="Material.DeadLine" class="form-control" type="datetime-local" />
                    <span asp-validation-for="Material.DeadLine" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Загрузить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Назад</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
