@page
@model AOS.Pages.Events.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Изменить файл</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="EditViewModel.Id" />
                <div class="form-group">
                    <label asp-for="EditViewModel.FileName" class="control-label"></label>
                    <input asp-for="EditViewModel.FileName" class="form-control" />
                    <span asp-validation-for="EditViewModel.FileName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-check-label">
                        @Html.DisplayNameFor(model => model.EditViewModel.IsActive)
                        @Html.DisplayFor(model => model.EditViewModel.IsActive)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="EditViewModel.SubjectId" class="control-label"></label>
                    <select asp-for="EditViewModel.SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                    <span asp-validation-for="EditViewModel.SubjectId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Назад</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
