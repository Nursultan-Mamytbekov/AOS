@page
@model AOS.Pages.Events.Homeworks.IndexModel

<div class="container">
    <h1>@Model.Material?.FileName</h1>
    <h4 class="mb-4">Загруженные работы</h4>
    <table class="table table-hover sortable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Homeworks[0].FileName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Homeworks[0].CreatedAt)
                </th>                
                <th>
                    @Html.DisplayNameFor(model => model.Homeworks[0].User)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Homeworks)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>                    
                    <td>
                        @Html.DisplayFor(modelItem => item.User.FullName)
                    </td>
                    <td align="center">
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-success w-75">Перейти</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-page="/Events/Details" asp-route-id="@Model.Material?.Id" class="btn btn-link mt-5">Назад</a>
</div>

@section Scripts {
    <script src="~/js/sort.js"></script>
}
