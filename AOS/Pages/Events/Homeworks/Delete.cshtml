@page
@model AOS.Pages.Events.Homeworks.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">

    <h3>Вы действительно хотите удалить загруженную работу?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Homework.CreatedAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Homework.CreatedAt)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Homework.FileName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Homework.FileName)
            </dd>                  
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Homework.Material)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Homework.Material.FileName)
            </dd>                
        </dl>
    
        <form method="post">
            <input type="hidden" asp-for="Homework.Id" />
            <a asp-page="/Events/Details" asp-route-id="@Model.Homework.Id" class="btn btn-secondary">Назад</a>
            <input type="submit" value="Удалить загруженную работу" class="btn btn-danger" /> 
        </form>
    </div>
</div>
